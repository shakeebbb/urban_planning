    <!-- <node name="voxblox_planner_node" pkg="li_pkg" type="voxblox_planner_node" output="screen" clear_params="true"/> -->
	<include file="$(find msfm3d)/launch/msfm3d_air.launch"/>
	<include file="$(find marble_guidance)/launch/guidance_air.launch"/>
	
	</group>
	<node pkg="msfm3d" name="tf2odom" type="subt_tf2odom_B01.py" output="screen"/>
</launch>
